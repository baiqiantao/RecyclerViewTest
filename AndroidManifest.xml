<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bqt.recyclerview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="recyclerview"
        android:theme="@style/AppTheme" >
        <!-- 直接在这里引用theme会提示No resource found that matches the given name (at 'theme' with value '@android:style/Theme.AppCompat.Light')
        这是eclipse的bug，当引用的库和你的代码不在一个盘符时就有此异常 -->
        <activity
            android:name=".MainActivity"
            android:label="recyclerview" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StaggeredGridLayoutActivity"></activity>
    </application>

</manifest>
